@model employee_training_tool.Models.LearningPath

@{
    ViewData["Title"] = "Details";
}

<h1>Learning Path Details</h1>

<div>
    <h4>@Model.Title</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.Label("Task Title")
                </th>
                <th>
                    @Html.Label("Task Description")
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Tasks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("View details", "Details", "CatalogTask", new {id = item.CatalogTaskId}, null)

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.LearningPathId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>