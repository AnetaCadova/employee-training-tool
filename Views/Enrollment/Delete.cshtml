@model employee_training_tool.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Enrollment</h1>

<h3>Are you sure you want to delete this enrollment?</h3>
<div>
    <h4>Enrollment</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewComer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewComer.UserName)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mentor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mentor.UserName)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LearningPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LearningPath.Title)
        </dd >
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EnrollmentId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        @if (User.IsInRole(ApplicationRole.Admin) || User.IsInRole("Viewer"))
        {
            <a asp-action="Index">Back to List</a>
        }
        else
        {
            @Html.ActionLink("Back to Overview", "Index", "AssignedLearningPath", "", null)
        }

    </form>
</div>