@model IEnumerable<employee_training_tool.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Enrollments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewComer.UserRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mentor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewComer.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mentor.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearningPath.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnrollmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EnrollmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EnrollmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
