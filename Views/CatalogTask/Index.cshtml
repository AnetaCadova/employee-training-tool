@model IEnumerable<employee_training_tool.Models.CatalogTask>

@{
    ViewData["Title"] = "Index";
}

<h1>Task Catalog</h1>

<p>
    <a asp-action="Create">Create new</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskType)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskType)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.CatalogTaskId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CatalogTaskId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CatalogTaskId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>